pipeline {
    agent any
    environment {
        PATH = "/opt/maven3/bin:$PATH"
    }
    stages {
        stage('cleanup') {
            steps {
                cleanWs()
            }
        }
        stage('checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/Rolex960/spring-boot-starter'
            }
        }
        stage('Maven Build') {
            steps {
                 sh "mvn clean package"
            }
        }
    }
}
